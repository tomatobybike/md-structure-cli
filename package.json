{
  "name": "md-structure",
  "version": "1.0.9",
  "description": "Generate markdown directory structure for README",
  "keywords": [
    "markdown",
    "directory",
    "structure",
    "tree",
    "readme",
    "cli"
  ],
  "homepage": "https://tomatobybike.github.io/md-structure/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomatobybike/md-structure"
  },
  "license": "MIT",
  "author": "Tom <tomatobybike@gmail.com>",
  "type": "module",
  "imports": {
    "#src/*": "./src/*",
    "#utils/*": "src/utils/*"
  },
  "bin": {
    "md-structure": "./bin/md-structure.mjs"
  },
  "scripts": {
    "check:npm:login": "node scripts/check-npm-login.mjs",
    "format": "prettier --write \"src/**/*.{js,mjs}\"",
    "gen:structure": "node scripts/gen-structure.mjs src -",
    "lint": "eslint src --ext .js,.mjs src",
    "lint:fix": "eslint src --ext .js,.mjs --fix",
    "pack": "npm pack",
    "prepare": "husky install",
    "prepublishOnly": "yarn lint",
    "prettierall": "npx prettier --write 'src/**/*.{js,jsx}'",
    "push:tags": "git push origin main --follow-tags",
    "prerelease": "yarn lint",
    "release": "yarn check:npm:login && yarn release:patch && npm publish && yarn push:tags",
    "release:major": "yarn lint && standard-version --release-as major",
    "release:minor": "yarn lint && standard-version --release-as minor",
    "release:patch": "yarn lint && standard-version --release-as patch",
    "release:rollback": "git reset --hard HEAD~1 && git tag -d $(git tag --points-at HEAD~1)",
    "sort": "sort-package-json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ],
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "8.1.0",
    "boxen": "8.0.1",
    "chalk": "5.6.2",
    "clipboardy": "5.0.2",
    "commander": "14.0.2",
    "is-online": "12.0.2",
    "semver": "7.7.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-packagejson": "2.5.20",
    "sort-package-json": "3.6.0",
    "standard-version": "9.5.0"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18.0.0"
  }
}
